<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.spring.mapper.BookMapper">

<select id= "getLists" resultType ="kr.spring.entity.Book">
SELECT * FROM BOOK ORDER BY NUM
</select>

<insert id ="bookInsert" parameterType = "kr.spring.entity.Book">
INSERT INTO BOOK(TITLE, WRITER, COMPANY, ISBN, COUNT)
VALUES(#{title}, #{writer}, #{company} #{isbn}, #{count})
</insert>

<select id = "bookContent" parameterType = "int" resultType ="kr.spring.entity.Book">
SELECT * FROM BOARD WHERE NUM = #{num}
</select>
<update id ="bookUpdate" parameterType ="kr.spring.entity.Board">
Update BOARD SET TITLE =#{title}, CONTENT = #{content}, WRITER =#{writer} where IDX = #{idx} 
</update>

<update id ="bookCount" parameterType ="int">
UPDATE BOARD SET COUNT = COUNT +1 WHERE IDX = #{num}

</update>
</mapper>