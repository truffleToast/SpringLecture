       <!-- 책 개수 수정 폼 -->
      <div class ="panel-body" id = "uform" style="display : none">
         <form id ="ufrm" >
         <input type= "hidden" value = num name ="num">
          <table class="table">
             <tr>
                <td>제목</td>
                <td><input type="text" readonly name="title" value="" class="form-control"></td>
