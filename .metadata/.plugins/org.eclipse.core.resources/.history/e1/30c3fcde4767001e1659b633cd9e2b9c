            <tbody id ="view"> 
            <!-- 비동기 통신으로 가져오는 게시글 -->
            </tbody>    
            <tr>
            	<td colspan= "8">
            		<buttton onclick="goForm()" class ="btn btn-primary btn-sm" >글쓰기</buttton>
